<%= render :partial => '/parts/title', :locals => {:val => t('common.show')} %>

<div id="operations">
  <%= render :partial => '/parts/commands', :locals => {:command => 'show', :obj => @modelstock } %>
</div>

<div class="form_layout">

<%= form_for(@modelstock) do |f| %>

<div>
<fieldset>
  <%= f.label :name, t('modelstock.name') %><br>
  <%= f.text_field :name, {:disabled => true} %><br>
  <%= f.label :scale, t('modelstock.scale') %><br>
  <%= f.text_field :scale, {:disabled => true} %><br>
  <%= f.label :status, t('modelstock.status') %><br>
  <%= text_field_tag :status, t('modelstock.statuses.'+@modelstock.status), {:disabled => true} %><br>
  <%= f.label :group1, t('modelstock.group1') %><br>
  <%= f.text_field :group1, {:disabled => true} %><br>
  <%= f.label :group2, t('modelstock.group2') %><br>
  <%= f.text_field :group2, {:disabled => true} %><br>
</fieldset>
</div>

<div>
<fieldset>
  <%= f.label :provider, t('modelstock.provider') %><br>
  <%= f.text_field :provider, {:disabled => true} %><br>
  <%= f.label :description, t('modelstock.description') %><br>
  <%= f.text_area :description, {:disabled => true} %><br>
</fieldset>
</div>

<% end %>

</div>

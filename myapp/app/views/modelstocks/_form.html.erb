<div class="form_layout">

<%= form_for(@modelstock) do |f| %>

<%= render :partial => '/parts/form_errors', :locals => {:obj => @modelstock} %>

<div>
<fieldset>
  <%= f.label :name, t('modelstock.name') %><br>
  <%= f.text_field :name %><br>
  <%= f.label :scale, t('modelstock.scale') %><br>
  <%= f.select :scale, options_for_select(modelstock_scale_selection, @modelstock.scale) %><br>
  <%= f.label :status, t('modelstock.status') %><br>
  <%= f.select :status, options_for_select(modelstock_status_selection, @modelstock.status) %><br>
  <%= f.label :group1, t('modelstock.group1') %><br>
  <%= f.text_field :group1 %><br>
  <%= f.label :group2, t('modelstock.group2') %><br>
  <%= f.text_field :group2 %><br>
</fieldset>
</div>

<div>
<fieldset>
  <%= f.label :provider, t('modelstock.provider') %><br>
  <%= f.select :provider, options_for_select(modelstock_provider_selection, @modelstock.provider) %><br>
  <%= f.label :description, t('modelstock.description') %><br>
  <%= f.text_area :description %><br>
  <%= f.submit val, {:class => "actions"} %>
</fieldset>
</div>

<% end %>

</div>

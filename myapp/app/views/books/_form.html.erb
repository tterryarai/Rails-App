
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

<div class="form">
  <div class="field">
    <%= f.label t('book.form.title') %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label t('book.form.volume') %><br />
    <%= f.text_field :volume %>
  </div>
  <div class="field">
    <%= f.label t('book.form.status') %><br />
    <%= f.select :status_id, options_for_select(get_status_list(Book::APP_ID), @book.status_id) %>
  </div>
  <div class="field">
    <%= f.label t('book.form.realm_and_series') %><br />
    <%= f.select :series_id, options_for_select(get_series_list(Book::APP_ID), @book.series_id) %>
  </div>
  <div class="field">
    <%= f.label t('book.form.author') %><br />
    <%= f.select :author_id, options_for_select(get_author_list, @book.author_id) %>
  </div>
  <div class="field">
    <%= f.label t('book.form.publisher') %><br />
    <%= f.select :publisher_id, options_for_select(get_publisher_list(Book::APP_ID), @book.publisher_id) %>
  </div>
</div>

<div class="form">
  <div class="field">
    <%= f.label t('book.form.description') %><br />
    <%= f.text_area :description, {:size => "40x13"}%>
  </div>
  <div class="actions">
    <%= f.submit val %>
  </div>
</div>

<% end %>


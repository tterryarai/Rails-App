<div class="form_layout">

<%= form_for(@book) do |f| %>

<%= render :partial => '/parts/form_errors', :locals => {:obj => @book} %>

<div>
<fieldset>
  <%= f.label :title, t('book.title') %><br>
  <%= f.text_field :title %><br>
  <%= f.label :volume, t('book.volume') %><br>
  <%= f.text_field :volume %><br>
  <%= f.label :status, t('book.status') %><br>
  <%= f.select :status, options_for_select(book_status_selection, @book.status) %><br>
  <%= f.label :group1, t('book.group1') %><br>
  <%= f.select :group1, options_for_select(book_group1_selection, @book.group1) %><br>
  <%= f.label :group2, t('book.group2') %><br>
  <%= f.select :group2, options_for_select(book_group2_selection, @book.group2) %><br>
  <%= f.label :provider, t('book.provider') %><br>
  <%= f.select :provider, options_for_select(book_provider_selection, @book.provider) %><br>
</fieldset>
</div>

<div>
<fieldset>
  <%= f.label :author, t('book.author') %><br>
  <%= f.select :author, options_for_select(book_author_selection, @book.author) %><br>
  <%= f.label :description, t('book.description') %><br>
  <%= f.text_area :description %><br>
  <%= f.submit val, {:class => "actions"} %>
</fieldset>
</div>

<% end %>

</div>

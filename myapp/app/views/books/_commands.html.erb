
<div class="command_buttons">
  <% case val %>
  <% when 'index' then %>
    <%= form_tag books_path, :method => :get do %>
	    <%= text_field_tag :keyword, session[:keyword] %>
	    <%= submit_tag t('book.index.search'), { :class => 'search_buttons' } %>
	    <%= submit_tag t('book.index.clear'), { :class => 'search_buttons' } %>
	    <%= hidden_field_tag :order, session[:order] %>
    <% end %>
    <%= button_to t('book.index.register'), {:action => 'new'}, :method => :get %>
  <% when 'new' then %>
    <%= button_to t('book.common.back'), {:action => 'index'}, :method => :get %>
  <% when 'edit' then %>
    <%= button_to t('book.common.back'), {:action => 'index'}, :method => :get %>
  <% when 'show' %>
    <%= button_to t('book.common.edit'), {:action => 'edit'}, :method => :get %>
    <%= button_to t('book.common.delete'), {:action => 'destroy', :id => @book.id}, :confirm => t('book.common.confirm'), :method => :delete %>
    <%= button_to t('book.common.back'), {:action => 'index'}, :method => :get %>
  <% else %>
    <%= button_to t('book.common.back'), {:action => 'index'}, :method => :get %>
  <% end %>
</div>


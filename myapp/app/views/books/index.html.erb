
<%= render :partial => '/parts/title', :locals => {:val => t('book.index.main_title')} %>

<div class="operation">
  <%= render :partial => 'pagination' %>
  <%= render :partial => 'commands', :locals => {:val => 'index'} %>
</div>

<table class="index_table">
<% order = session[:order].to_s %>
  <tr>
    <th><%= link_to t('book.index.th_title'),  books_path(:order => cycle_bk_order('title', order))%></th>
    <th><%= t('book.index.th_volume') %></th>
    <th><%= t('book.index.th_status') %></th>
    <th><%= link_to t('book.index.th_realm'),  books_path(:order => cycle_bk_order('realm',  order))%></th>
    <th><%= link_to t('book.index.th_series'), books_path(:order => cycle_bk_order('series', order))%></th>
    <th><%= t('book.index.th_edit') %></th>
  </tr>

<% no_data = t('app.common.no_data')%>
<% @books.each do |book| %>
  <tr>
    <td id='index_table_title_td'>
    <% if book.title.present? then %>
      <%= link_to book.title, book %>
    <% else %>
      <%= no_data %>
    <% end %>
    </td>
    <td><%= book.volume.present? ? book.volume : no_data %></td>
    <td><%= book.status.present? ? td('book.status', book.status) : no_data %></td>
    <td><%= book.realm.present? ? td('book.realm', book.realm) : no_data %></td>
    <td><%= book.series_id.present? ? book.series.name : no_data %></td>
    <td><%= link_to image_tag('web-app-theme/icons/application_edit.png'), {:action => 'edit', :id => book.id}, :method => :get %></td>
  </tr>
<% end %>
</table>

<br />



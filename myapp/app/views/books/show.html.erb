
<%= render :partial => '/parts/title', :locals => {:val => t('common.show')} %>

<div id="operations">
  <%= render :partial => '/parts/commands', :locals => {:command => 'show', :obj => @book } %>
</div>

<div class="form_layout">

<%= form_for(@book) do |f| %>

<div>
<fieldset>
  <%= f.label :title, t('book.title') %><br>
  <%= f.text_field :title, {:disabled => true} %><br>
  <%= f.label :volume, t('book.volume') %><br>
  <%= f.text_field :volume, {:disabled => true} %><br>
  <%= f.label :status, t('book.status') %><br>
  <%= text_field_tag :status, t('book.statuses.'+@book.status), {:disabled => true} %><br>
  <%= f.label :group1, t('book.group1') %><br>
  <%= text_field_tag :group1, @book.group1, {:disabled => true} %><br>
  <%= f.label :group2, t('book.group2') %><br>
  <%= text_field_tag :group2, @book.group2, {:disabled => true} %><br>
  <%= f.label :provider, t('book.provider') %><br>
  <%= text_field_tag :provider, @book.provider, {:disabled => true} %><br>
</fieldset>
</div>

<div>
<fieldset>
  <%= f.label :author, t('book.author') %><br>
  <%= text_field_tag :author, @book.author, {:disabled => true} %><br>
  <%= f.label :description, t('book.description') %><br>
  <%= f.text_area :description, {:disabled => true} %><br>
</fieldset>
</div>

<% end %>

</div>


<%= render :partial => '/parts/title', :locals => {:val => t('author.index.main_title') } %>

<div class="operation">
  <%= render :partial => 'commands', :locals => {:val => 'index'} %>
</div>

<table class="index_table">
  <tr>
    <th><%= t('author.index.th_name') %></th>
    <th colspan="2" ><%= t('author.index.th_commands') %></th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td id="index_table_title_td"><%= author.name %></td>
    <td><%= link_to t('author.common.edit'), edit_author_path(author) %></td>
    <td><%= link_to t('author.common.delete'), author, method: :delete, data: { confirm: t('author.common.confirm')} %></td>
  </tr>
<% end %>
</table>

